<%= render 'layouts/errors', object: @candidate %>

<%= bootstrap_form_for(@candidate) do |f| %>
  <%= f.text_field :name %>
  <%= f.file_field :avatar %>
  <%= f.text_field :votes %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit data: {disable_with: "C A N D I D A T I N G"}, class: "btn btn-success btn-block" %>
<% end %>
